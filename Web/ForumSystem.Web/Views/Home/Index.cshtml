@model IEnumerable<ForumSystem.Web.ViewModels.Home.IndexBlogPostViewModel>

@{
    ViewBag.Title = "Posts";
}

<div class="jumbotron">
    <h1>@ViewBag.Title</h1>
</div>

<div class="row">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeletedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDeleted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifiedOn)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedOn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeletedOn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsDeleted)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModifiedOn)
                </td>
            </tr>
        }

    </table>

    <div class="container">
        @foreach (var post in Model)
        {
            <div class="row">
                <div class="col-md-1 answers">
                    <div class="well text-center">
                        <div class="row">0</div>
                        <div class="row">answers</div>
                    </div>
                </div>
                <div class="col-md-1 answers">
                    <div class="well text-center">
                        <div class="row">0</div>
                        <div class="row">answers</div>
                    </div>
                </div>
                <div class="col-md-10">
                    <div class="row">
                        <h4>
                            <a href="/123/asd-asd-asd">@post.Title</a>
                        </h4>
                    </div>
                    <div class="row">
                        <p>asked 35 minutes ago in Kids Academy - програмиране за деца by a.dimitrov04 (40 points)</p>
                    </div>
                    <div class="row">
                        <span class="label label-default">kids</span>
                        <span class="label label-default">academy</span>
                        <span class="label label-default">blabla</span>
                        <span class="label label-default">kadasdaasdasdasdids</span>
                    </div>
                </div>
            </div>
            <hr />
        }
    </div>
</div>